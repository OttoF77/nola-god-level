# Environment variables template
# Copy this file to .env and fill with your values
# NEVER commit .env to version control

# PostgreSQL Database
POSTGRES_DB=challenge_db
POSTGRES_USER=challenge
POSTGRES_PASSWORD=change_me_in_production

# Database connection string (used by backend and data-generator)
DATABASE_URL=postgresql://challenge:change_me_in_production@postgres:5432/challenge_db

# PgAdmin (optional, only for development tools profile)
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=change_me_pgadmin

# Backend API configuration (optional)
ALLOW_ORIGINS=*
STATEMENT_TIMEOUT=15s
